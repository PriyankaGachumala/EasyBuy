@model IEnumerable<Product>
 
@if (Model.Count() > 0) 
{
    <div class="col-12">
        <div class="row">
            <h3 class="text-success" style="font-size:25px">@Model.FirstOrDefault().Category.Name</h3>
        </div>

        @foreach (var product in Model) 
        {
            <div class="border rounded col-12" style="margin-bottom:10px; margin-top:10px; padding:10px">
                <div class="row">
                    <div class="col-md-3 col-sm-12">
                        <img src="@product.Image" width="99%" style="border-radius:5px;border:1px solid#ffffff"/>
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <div class="row pr-3">
                            <div class="col-8">
                                <label class="text-primary" style="font-size:21px">@product.Name</label>
                            </div>
                            <div class="col-4 text-right" style="color:maroon">
                                <h4>$@product.Price</h4>

                            </div>
                        </div>
                        <div class="row col-12">
                            <p>@Html.Raw(product.Description)</p>
                        </div>
                        <div class="col-md-3 col-sm-12 offset-md-9 text-center">
                            <a asp-action="Details" class="btn btn-success form-control" asp-route-id="@product.Id">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="p-4"></div>
    </div>

}