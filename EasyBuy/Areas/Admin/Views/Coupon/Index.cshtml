@model IEnumerable<Coupon>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="backgroundWhiteBorder">
	<div class="row">
		<div class="col-6">
			<h2 class="text-info">Coupon List</h2>
		</div>
		<div class="col-6 text-right">
			<partial name="_CreateButtonPartial">
		</div>
	</div>
	<br />
	<div>
		@if (Model.Count() > 0)
		{
		<table class="table table-striped border">
			<tr class="table-secondary">
				<th>
					@Html.DisplayNameFor(m => m.Name)
				</th>
				<th>
					@Html.DisplayNameFor(m => m.Discount)
				</th>
				<th>
					@Html.DisplayNameFor(m => m.MinimunOrderAmount)
				</th>
				<th>
					@Html.DisplayNameFor(m => m.IsActive)
				</th>
			</tr>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(m => item.Name)
					</td>
					<td>
						@Html.DisplayFor(m => item.Discount)
					</td>
					<td>
						@Html.DisplayFor(m => item.MinimunOrderAmount)
					</td>
					<td>
						@Html.DisplayFor(m => item.IsActive)
					</td>
					<td>
						<partial name="_ThreeButtonsPartial" model="item.Id" />
					</td>
				</tr>

			}
		</table>
		}
		else
		{
			<p>No Coupons found</p>
		}
	</div>

</div>

