
@model IEnumerable<Product>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="backgroundWhiteBorder">
	<div class="row">
		<div class="col-6">
			<h2 class="text-info">Products List</h2>
		</div>
		<div class="col-6 text-right">
			<partial name="_CreateButtonPartial">
		</div>
	</div>
	<br />
	<div>
		@if (Model.Count() > 0)
		{
			<table class="table table-striped border">
				<tr class="table-secondary">
					<th>
						@Html.DisplayNameFor(m => m.Name)
					</th>
					<th>
						@Html.DisplayNameFor(m => m.Price)
					</th>
					<th>
						@Html.DisplayNameFor(m => m.CategoryId)
					</th>
					<th>
						@Html.DisplayNameFor(m => m.SubCategoryId)
					</th>
				</tr>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(m => item.Name)
						</td>
						<td>
							@Html.DisplayFor(m => item.Price)
						</td>
						<td>
							@Html.DisplayFor(m => item.Category.Name)
						</td>
						<td>
							@Html.DisplayFor(m => item.SubCategory.Name)
						</td>
						<td>
							<partial name="_ThreeButtonsPartial" model="item.Id" />
						</td>
					</tr>
				}
			</table>
		}
		else
		{
			<p>No products found</p>
		}
	</div>

</div>

@section Scripts{ 
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}